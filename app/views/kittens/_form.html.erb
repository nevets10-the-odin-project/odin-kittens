<%= form_with model: kitten do |f| %>
  <% if kitten.errors.any? %>
    <div style="color: red">
      <ul>
        <% kitten.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :age %>
  <%= f.number_field :age %>
  <br>
  <%= f.label :cuteness %>
  <%= f.text_field :cuteness %>
  <br>
  <%= f.label :softness %>
  <%= f.text_field :softness %>
  <br>
  <%= f.submit %>
<% end %>